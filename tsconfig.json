{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "app/*"        : [ "app/*"        ] ,
      "assets/*"     : [ "assets/*"     ] ,
      "components/*" : [ "components/*" ] ,
      "config/*"     : [ "config/*"     ] ,
      "directives/*" : [ "directives/*" ] ,
      "domain/*"     : [ "domain/*"     ] ,
      "pages/*"      : [ "pages/*"      ] ,
      "pipes/*"      : [ "pipes/*"      ] ,
      "providers/*"  : [ "providers/*"  ]
    },
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "lib": [
      "dom",
      "es2015",
      "es2017"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2016"
  },
  "include": [
    "src/config/moment.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "Docs/**",
    "**/*.spec.ts",
    "lib",
    "dist"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
